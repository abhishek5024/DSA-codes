class Solution {
    public String mergeAlternately(String word1, String word2) {
        int m = word1.length();
        int n = word2.length();
        StringBuilder sb= new StringBuilder();
        int i = 0;
        int j = 0;

        while (i<m && i<n){
            sb.append(word1.charAt(i++));
            sb.append(word2.charAt(j++));
        }
        while (i<m){
            sb.append(word1.charAt(i++));
        }
        while (j<n){
            sb.append(word2.charAt(j++));
        }
        return sb.toString();
    }
}
