 void segregateElements(int arr[],int n)
    {
        vector<int>elements;
        for(int i=0;i<n;i++)
        {
            if(arr[i]>0)
            {
                elements.push_back(arr[i]);
            }
        }
        for(int i=0;i<n;i++)
        {
            if(arr[i]<0)
            {
                elements.push_back(arr[i]);
            }
        }
      for(int i=0;i<n;i++){
          arr[i]=elements[i];
      }
    }
